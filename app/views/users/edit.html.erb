<h2>Edit User</h2>
<%= form_with(model: @user, local: true, html: {class: "form-horizontal"}) do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name, "Name", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :username, "Username", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :username, autocomplete: "username", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, "Password", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confimar Password", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :admin, "Admin", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.check_box :admin, autocomplete: "admin", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Udpdate", class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
  </fieldset>

<%= link_to "Back", :back %>